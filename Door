using UnityEngine;


public class Door : MonoBehaviour
{
    [SerializeField] private Siren _siren;
    
    private void OnTriggerEnter(Collider door)
    {
        if (door.TryGetComponent<Thief>(out Thief player))
        {
           _siren.ChangeVolume(1);
           _siren.SirenPlay();
        }
    }

    private void OnTriggerExit(Collider door)
    {
        if (door.TryGetComponent<Thief>(out Thief player))
        {
            _siren.ChangeVolume(0);
        }
    }
}
